---
import { IExperiences } from "@types";

const { title, details } = Astro.props as IExperiences;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-light"
  data-animate="fade-up"
>
  <h2 class="w-[15rem] mt-16">{title}</h2>
  <div class="w-full">
    {
      details.map((item) => (
        <div class="my-16" data-animate="fade-up">
          <div class="flex justify-between items-center flex-wrap">
            <div class="flex items-center space-x-2">
              <h3 class="text-2xl font-semibold">{item.name}</h3>
              {item.isInternship ? (
                <div class="bg-blue rounded-3xl px-2 py-1">
                  <p class="text-sm text-white">Internship</p>
                </div>
              ) : null}
            </div>
            <p class="text-sm dark:text-gray">
              {item.startDate} - {item.endDate}
            </p>
          </div>
          <p class="text-md font-medium mt-1 text-blue">{item.position}</p>
          <p class="text-sm mt-3 text-blue">{item.location}</p>
          <ul class="mt-3">
            {item.description.map((item) => (
              <li class="dark:text-gray">{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
